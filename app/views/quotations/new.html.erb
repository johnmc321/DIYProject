<%= provide(:title, 'Quotation Request') %>
<h1 xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html"
    xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">Quotation Request</h1>

<div>

  <div class="inline" >

    <%= form_for(@quotation) do |f| %>
        <%=  render 'shared/error_messages', object: f.object %>

         <%= f.label :name %>  <br/>
        <%=  f.text_field :name, :value=>current_user.name %><br/>
         <%= f.label :email %> <br/>
          <%= f.text_field :email, :value=>current_user.email %><br/>
         <%= f.label :location %> <br/>
        <%= f.select :location, options_for_select(["select County",
                                                    "Carlow",
                                                    "Dublin",
                                                    "Kildare",
                                                    "Kilkenny",
                                                    "Laois",
                                                    "Longford",
                                                    "Louth",
                                                    "Meath",
                                                    "Offaly",
                                                    "Westmeath",
                                                    "Wexford",
                                                    "Wicklow"], :class=>'genForm_dropBox') %>
          <%= f.label :description %><br/>
          <%= f.text_area :description %><br/>
          <%= f.label :jobtype, "Please select the general job type" %> <br/>
           <%= f.select :jobtype, options_for_select(["select one",  "Tiler", "Builder", "Carpenter", "Decking", "Plumbing"], :class=>'genForm_dropBox') %>


        <p>  <%= f.submit "Submit Request", class: "btn btn-large btn-primary" %> </p>


    <% end %>


  </div>


</div>
