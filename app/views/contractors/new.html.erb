<%= provide(:title, 'Add Contractor') %>
<h1 xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html"
    xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">Add Contractor</h1>

<div>

  <div class="inline" >

    <%= form_for(@contractor) do |f| %>
        <%=  render 'shared/error_messages', object: f.object %>

        <%= f.label :name %>  <br/>
        <%=  f.text_field :name%><br/>
        <%= f.label :email %> <br/>
        <%= f.text_field :email %><br/>
        <%= f.label :location %> <br/>
        <%= f.text_field :location%> <br/>
        <%= f.label :jobtype, "Please select the general job type" %> <br/>
        <%= f.select :jobtype, options_for_select(["select one", "Tiler", "Builder"], :class=>'genForm_dropBox') %>

        <p>  <%= f.submit "Submit Request", class: "btn btn-large btn-primary" %> </p>


    <% end %>


  </div>


</div>


