<% provide(:title, "Edit user") %>
<h1 id="change_color">Your Profile</h1>

<div class="user_position">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name %>
        <%= f.text_field :name %>

      <br/><%= f.label :email %>
           <%= f.text_field :email %>

        <br/> <%= f.label :location %>
              <%= f.text_field :location %>

         <br/><%=f.label :password %>
             <%= f.password_field :password %>


         </br><%= f.label :password_confirmation, "Confirm Password" %>
              <%= f.password_field :password_confirmation %><br/>



           <td><%= f.submit "Save changes", class: "btn btn-large btn-primary" %></td>
        </tr>
    <% end %>


  </div>
</div>