<% provide(:title, @user.name) %>

<table>
  <caption>Customer Details</caption>
  <tr>
    <th> Customer Name</th>
    <th> Email</th>
    <th> Location </th>
   </tr>


  <tr>
    <td> <%= @user.name %> </td>
    <td><%= @user.email %>  </td>
    <td><%= @user.location%> </td>
  </tr>
 </table>
<table>
  <caption> Quotation Details</caption>
  <tr>
    <th> Quotation ID</th>
    <th> Customer Name</th>
    <th> Email</th>
    <th> Location</th>
    <th> Jobtype</th>
    <th> Job Description</th>
    <th> Contractor ID</th>
  </tr>

<% @quotation.each do|quotation|%>
   <tr>
     <td><%= quotation.id %></td>
     <td><%= quotation.name %></td>
     <td><%=  quotation.email%> </td>
     <td><%= quotation.location%> </td>
     <td><%= quotation.jobtype%> </td>
     <td><%= quotation.description%> </td>
     <td><%= quotation.contractor_id%></td>
   </tr>
    <%end %>
</table>

<table>
  <caption> Order Details</caption>
  <tr>
    <th> Order ID</th>
    <th> Customer Name</th>
    <th> Email</th>
    <th> Location</th>
    <th> Payment Method</th>
    <th> Date</th>
  </tr>

  <% @order.each do|order|%>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.name %></td>
        <td><%=  order.email%> </td>
        <td><%= order.address%> </td>
        <td><%= order.pay_type%> </td>
        <td><%= order.created_at%></td>
      </tr>
  <%end %>
</table>










